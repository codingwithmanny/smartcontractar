{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "db:up": {},
    "db:down": {},
    "db:migrate": {},
    "email:test": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "VITE_API_URL",
    "EMAIL_SERVER",
    "EMAIL_HOST",
    "EMAIL_PORT",
    "EMAIL_AUTH_USER",
    "EMAIL_AUTH_PASSWORD",
    "EMAIL_FROM",
    "QSTASH_TOKEN",
    "QSTASH_NEXT_SIGNING_KEY",
    "QSTASH_CURRENT_SIGNING_KEY",
    "DOMAIN_URL",
    "API_SERVICE_URL"
  ]
}
